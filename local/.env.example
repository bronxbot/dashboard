# Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Flask Configuration
SECRET_KEY=your-secret-key-here-generate-a-strong-one
FLASK_ENV=development
FLASK_DEBUG=1

# Database Configuration
# MongoDB URI - Replace with your actual MongoDB connection string
MONGO_URI=mongodb://localhost:27017/bronxbot
# Alternative: MongoDB Atlas
# MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/bronxbot?retryWrites=true&w=majority

# Discord OAuth Configuration
# Get these from https://discord.com/developers/applications
DISCORD_CLIENT_ID=your-discord-client-id
DISCORD_CLIENT_SECRET=your-discord-client-secret
DISCORD_TOKEN=your-discord-bot-token

# Server Configuration
PORT=5000
HOST=127.0.0.1

# Session Configuration
SESSION_KEY=your-session-secret-key

# Security Configuration (for production)
WTF_CSRF_SECRET_KEY=your-csrf-secret-key

# Optional: Database URL for SQLAlchemy (if used)
DATABASE_URL=sqlite:///data/database.sqlite

# Optional: Redis for sessions (if used)
REDIS_URL=redis://localhost:6379

# Testing Configuration
TESTING=False